.header
  margin: 10px 0 0
  text-align: center

.urls
  text-align: center
  padding: 5px

.url
  text-align: center
  margin: 5px
  overflow: hidden
  background: dnavy
  display: inline-block
  width: 95%

  h2, h3, h4
    reset-box-model()
    font-weight: 300

  .content
    height: 190px
    position: relative
    cursor: pointer

    h2, h3
      text-align: center
      width: 100%

    h2
      position: absolute
      top: 15px
      font-size: 2em

    h3
      position: absolute
      bottom: 20px
      font-size: 1.5em

  .link
    height: 40px
    line-height: 40px
    background: navy

    a
      text-decoration: none
      color: white

.modal
  position: fixed
  top: 50%
  left: 50%
  margin-left: -160px
  margin-top: -165px
  width: 280px
  padding: 20px
  
  box-shadow: 0 0 10px rgba(0,0,0,.30)
  border-radius: 5px
  background: lighten(bg, 3)
  color: lighten(notblack, 15)

  h2
    reset-box-model()
    font-weight: 300
    font-size: 1.2em
    margin-bottom: 1em

  h3
    font-weight: 300

  input[type='email']
    width: 240px

  .warnings
    margin: 2em 0

    label
      display: inline-block
      margin-right: 10px

  .actions
    font-size: .8em
    text-align: right
    position: relative

    .remove
      position: absolute
      left: 0
      background: #E63D5F

    .cancel
      background: silver
      margin-left: 5px
